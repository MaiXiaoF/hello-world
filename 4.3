 输入字符 三角形金字塔
int main()
{
	char ch = 0;
	ch = getchar();
	int j = 0;
	int i = 0;
	//外层循环 
	for (j = 0; j < 5; j++)
	{
		//空格
		for (i = 0; i <= 4 - j; i++)
		{
			printf(" ");
		}
		//字符
		for (i = 0; i <= j; i++)
		{
			printf("%c ", ch);
		}
		printf("\n");
	}
	
	return 0;
}
